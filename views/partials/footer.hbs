<div class="{{hiddenFooter}}">
	<div id="featuredArticles" class="container-fluid">
		<div class="row">
			{{#each featuredPosts}}
				<div class="col-lg-3 col-md-6 articleCol">
					<div class="articleContainer">
						<div class="articleImage" style="background-image: url('{{this.imagePath}}')"></div>
						<a href="/post/{{this._id}}" class="featuredInfo featuredLink">
							<div class="featuredInfoContainer">
								<div class="featuredDetails">
									<span class="featuredAuthor">{{this.authorName}}</span>
									<span class="featuredDate">{{dateStringConvert this.date}}</span>
								</div>
								<p class="featuredTitle">{{this.title}}</p>
							</div>
						</a>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
