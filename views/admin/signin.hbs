<div class="signinContainer">
	<div class="container">
		<div class="row">
			<div class="col-6 offset-3 col-sm-4 offset-sm-4">
				<h2>Sign in as admin</h2>
				{{#if hasErrors}}
					<div class="alert alert-danger">
						{{# each messages}}
							<p>{{this}}</p>
						{{/each}}
					</div>
				{{/if}}
				<form action="/admin/signin" method="post">
					<div class="form-group">
						<label for="email">E-Mail</label>
						<input autocomplete="off" type="text" id="email" name="email" class="form-control">
					</div>
					<div class="form-group">
						<label for="password">Password</label>
						<input type="password" id="password" name="password" class="form-control">
					</div>
					<input type="hidden" name="_csrf" value="{{ csrfToken }}">
					<button id="signinButton" type="submit" class="btn btn-primary">Sign in</button>
				</form>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="/javascripts/navreset.js"></script>